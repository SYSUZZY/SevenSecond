<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/memory_test"/>

        <TextView
            android:id="@+id/memory_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="第一次因为动漫哭泣"
            android:textColor="#000000"
            android:textSize="18dp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/memory_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="#海贼王321集——和梅利的最后道别#"
            android:textColor="#333333"
            android:textSize="14dp"
            android:maxLines="2"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="10dp"
        android:text="2017年2月24日"
        android:textColor="#CCCCCC"
        android:textSize="14dp"/>

    <RelativeLayout
        android:layout_gravity="right|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/memory_face"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/memory_author"
            android:layout_centerVertical="true"
            android:src="@drawable/app_icon"/>
        <TextView
            android:id="@+id/memory_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="穿睡服的金鱼"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:textSize="14dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>